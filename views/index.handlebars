<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-2 col-md-offset-5">
      <img src="burg.png">
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-2 col-md-offset-5">
      <div class="form-group">
        <form action="/" method="POST">
          <input type="text" name="name" class="form-control">
          <button type="submit">Make Burg!</button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-2 col-md-offset-5">
      <h2> Burgs </h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
              <li>
                {{this.burger_name}}

                <div class="form-group">
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                    <button type="submit">EAT!</button>
                  </form>
                </div>

              </li>
            {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-2 col-md-offset-5">
      <h2> Devoured Burgs </h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>  
  </div>
</div>



